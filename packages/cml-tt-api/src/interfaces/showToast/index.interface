<include src="chameleon-api/src/interfaces/showToast/index.interface"></include>

<script cml-type="tt">

class Method implements uiInterface {
  showToast(opt) {
    let { message, duration } = opt;
    tt.showToast({
      icon: 'none',
      title: message,
      duration: duration
    });
  }
}

export default new Method();

</script>
